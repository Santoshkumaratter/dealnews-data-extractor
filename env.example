# MySQL Database Configuration
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=root
MYSQL_DATABASE= 

# Feature Flags
DISABLE_MYSQL=false
CLEAR_DATA=false

# Proxy configuration (optional - OFF by default for safety)
# To enable, set DISABLE_PROXY=false in your own .env (NOT committed)
DISABLE_PROXY=true
PROXY_HOST=p.webshare.io
PROXY_PORT=80
PROXY_USER=xzplizuw
PROXY_PASS=qmb7v3r0q28f
# Or provide a full proxy URL instead of separate fields:
# PROXY_URL=http://xzplizuw:qmb7v3r0q28f@p.webshare.io:80
FORCE_UPDATE=true
CAPTURE_MODE=full  # 'full' = capture all deals once (first run), 'incremental' = only new deals (daily runs)

# Scrapy Settings
DOWNLOAD_DELAY=0.1
RANDOMIZE_DOWNLOAD_DELAY=0.5
CONCURRENT_REQUESTS=16
CONCURRENT_REQUESTS_PER_DOMAIN=8
DOWNLOAD_TIMEOUT=30
RETRY_TIMES=3

# AutoThrottle Settings
AUTOTHROTTLE_ENABLED=true
AUTOTHROTTLE_START_DELAY=1
AUTOTHROTTLE_MAX_DELAY=10
AUTOTHROTTLE_TARGET_CONCURRENCY=2.0

# User Agent Rotation
ROTATE_USER_AGENT=true

# Logging Configuration
LOG_LEVEL=INFO  # Set to WARNING to reduce log file size (500MB -> 5MB)

