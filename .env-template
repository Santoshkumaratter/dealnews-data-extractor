# DealNews Scraper Environment Configuration
# Copy this file to .env and update the values

# MySQL Configuration (Laradock)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=root
MYSQL_DATABASE=dealnews

# Feature Flags
DISABLE_PROXY=true
DISABLE_MYSQL=false

# Data Management
FORCE_UPDATE=false    # Set to true to re-scrape existing deals
CLEAR_DATA=false      # Set to true to clear all existing data before scraping
CAPTURE_MODE=incremental  # 'full' = capture all deals once (first run), 'incremental' = only new deals (daily runs)

# Scraper Configuration
MAX_DEALS=100000
DOWNLOAD_DELAY=0.1
CONCURRENT_REQUESTS=16
CONCURRENT_REQUESTS_PER_DOMAIN=8

# Logging Configuration
LOG_LEVEL=INFO  # Set to WARNING to reduce log file size (500MB -> 5MB)